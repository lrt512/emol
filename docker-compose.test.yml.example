version: '3.8'

services:
  app:
    image: emol:latest
    restart: unless-stopped
    ports:
      - "8080:80"
    environment:
      - AWS_DEFAULT_REGION=ca-central-1
      - DJANGO_SETTINGS_MODULE=emol.settings.prod
    volumes:
      - static_test:/opt/emol/static
      - emol_logs_test:/var/log/emol
      - nginx_logs_test:/var/log/nginx
      # Mount configuration files from /opt/emol_config (optional)
      # These will be automatically mounted by deploy-docker.sh if they exist:
      # - /opt/emol_config/emol_production.py:/opt/emol/emol/emol/settings/emol_production.py:ro
      # - /opt/emol_config/emol_credentials.json:/opt/emol/emol_credentials.json:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

volumes:
  static_test:
  emol_logs_test:
  nginx_logs_test:

