services:
  app:
    image: emol:latest
    restart: unless-stopped
    ports:
      - "80:80"
    environment:
      - AWS_DEFAULT_REGION=ca-central-1
      - DJANGO_SETTINGS_MODULE=emol.settings.prod
    volumes:
      - static:/opt/emol/static
      - emol_logs:/var/log/emol
      - nginx_logs:/var/log/nginx
      # Mount AWS credentials from /opt/emol_config (optional)
      # This will be automatically mounted by deploy-docker.sh if it exists:
      # - /opt/emol_config/emol_credentials.json:/opt/emol/emol_credentials.json:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

volumes:
  static:
  emol_logs:
  nginx_logs:
